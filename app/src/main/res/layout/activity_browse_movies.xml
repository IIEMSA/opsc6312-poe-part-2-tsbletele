<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_blue_bg"
    android:padding="16dp">

    <!-- Header -->
    <TextView
        android:id="@+id/tvBrowseTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Browse Movies"
        android:textSize="26sp"
        android:textStyle="bold"
        android:layout_marginBottom="12dp" />

    <!-- Search Bar -->
    <LinearLayout
        android:id="@+id/searchContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/search_background"
        android:padding="6dp"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp">

        <EditText
            android:id="@+id/searchInput"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:hint="Search for a movie..."
            android:background="@android:color/transparent"
            android:paddingStart="8dp"
            android:imeOptions="actionSearch"
            android:singleLine="true" />

        <ImageButton
            android:id="@+id/searchButton"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/circle_button"
            android:src="@drawable/ic_browse"
            android:contentDescription="Search" />

        <ImageButton
            android:id="@+id/voiceButton"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="6dp"
            android:background="@drawable/circle_button"
            android:src="@drawable/ic_mic"
            android:contentDescription="Voice Search" />
    </LinearLayout>

    <!-- Filter Row -->
    <LinearLayout
        android:id="@+id/filterRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp">

        <Spinner
            android:id="@+id/spinnerGenre"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:spinnerMode="dropdown"
            android:entries="@array/genres_array" />

        <Spinner
            android:id="@+id/spinnerSort"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:spinnerMode="dropdown"
            android:entries="@array/sort_options" />
    </LinearLayout>

    <!-- Movie List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerBrowse"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:overScrollMode="never" />

    <!-- Progress Bar -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        android:indeterminate="true" />

    <!-- Empty/Error Message -->
    <TextView
        android:id="@+id/tvEmpty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No movies found"
        android:textSize="16sp"
        android:visibility="gone"
        android:layout_gravity="center"
        android:padding="8dp"
        android:textColor="@android:color/darker_gray" />

</LinearLayout>
